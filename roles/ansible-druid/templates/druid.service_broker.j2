[Unit]
Description=Druid broker Service
After=network.target

[Service]
User={{ druid_user }}
ExecStart=/bin/sh -c "/usr/bin/java $(/bin/cat {{ druid_path }}conf/druid/broker/jvm.config | /usr/bin/xargs) -cp {{ druid_path }}conf/druid/_common:{{ druid_path }}conf/druid/broker:{{ druid_path }}lib/* io.druid.cli.Main server broker"
Restart=always

[Install]
WantedBy=default.target