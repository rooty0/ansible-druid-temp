<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <Appenders>
  <RollingFile name="File" fileName="{{ druid_log_path }}/coordinator.log" filePattern="{{ druid_log_path }}/coordinator.%i.log">
      <PatternLayout>
        <Pattern>"%d{ISO8601} %p [%t] %c - %m%n"</Pattern>
      </PatternLayout>
      <Policies>
        <SizeBasedTriggeringPolicy size="1 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="9"/>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="File"/>
    </Root>
  </Loggers>
</Configuration>
